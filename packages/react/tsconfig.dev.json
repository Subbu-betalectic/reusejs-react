{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable"],
    "declaration": true,
    // "declarationDir": "dist/types",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "outFile": "dist/index.cjs.js",
    "skipLibCheck": true,
    "module": "commonjs"
  },
  "include": ["src/**/*"],
  "exclude": ["../../node_modules"]
}
